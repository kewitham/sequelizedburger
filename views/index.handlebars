<h1 align="center">Eat-da-Burger!</h1>



<!-- <h2>Cats that are not sleepy!</h2> -->

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat me</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2 align="center">Devoured burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
<!--           <button type="submit">have another</button>
 -->        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2 align="center">Add a Burger</h2>
